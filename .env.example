# ============================================================================
# AUTONOMOUS RESEARCH AGENT - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and configure your settings
# Get your free OpenRouter API key at: https://openrouter.ai/
# Get your free Tavily API key at: https://tavily.com/
# ============================================================================

# OpenRouter API Key (REQUIRED)
# Get your free API key from https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Tavily API Key (OPTIONAL - for enhanced web search)
# Get your free API key from https://tavily.com/
# If not provided, system will use DuckDuckGo and Google as fallback
TAVILY_API_KEY=your_tavily_api_key_here

# Database Configuration
DATABASE_PATH=./data/agent_memory.db

# Logging Configuration
LOG_DIR=./logs
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# State Machine Timeouts (seconds)
TIMEOUT_PLANNING=30
TIMEOUT_TOOL_EXECUTION=120
TIMEOUT_OBSERVATION=20
TIMEOUT_REFLECTION=30
TIMEOUT_CONFIDENCE_EVALUATION=20
TIMEOUT_REPLANNING=30
TIMEOUT_ERROR_RECOVERY=10

# Confidence Thresholds
CONFIDENCE_THRESHOLD_PROCEED=80
CONFIDENCE_THRESHOLD_CRITICAL=60
MAX_RETRY_ATTEMPTS=2

# Tool Configuration
RATE_LIMIT_DELAY=2.5  # seconds between API calls
WEB_SCRAPER_TIMEOUT=30  # seconds
PYTHON_EXECUTOR_TIMEOUT=10  # seconds

# Output Configuration
OUTPUT_DIR=./outputs

# UI Configuration
UI_HOST=0.0.0.0
UI_PORT=8000

# Escalation Configuration (Optional)
ESCALATION_EMAIL_ENABLED=false
ESCALATION_EMAIL_SMTP_HOST=smtp.gmail.com
ESCALATION_EMAIL_SMTP_PORT=587
ESCALATION_EMAIL_FROM=your_email@example.com
ESCALATION_EMAIL_TO=admin@example.com
ESCALATION_EMAIL_PASSWORD=your_email_password

ESCALATION_WEBHOOK_ENABLED=false
ESCALATION_WEBHOOK_URL=https://your-webhook-url.com/escalate
